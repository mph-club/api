{
  "openapi": "3.0.0",
  "info": {
    "title": "MPH Club",
    "description": "This is the MPH API definition.",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Cars",
      "description": "Everything about cars"
    }
  ],
  "servers": [
    {
      "url": "/api/v1",
      "description": "Development server"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "$ref": "schemas/user.json"
      },
      "Vehicle": {
        "$ref": "schemas/vehicle.json"
      }
    },
    "responses": {
      "GetCarsJSONResponse": {
        "description": "Successful response",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "properties": {
                    "vehicles": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Vehicle"
                      }
                    }
                  }
                },
                "message": {
                  "type": "string",
                  "example": "success"
                }
              }
            }
          }
        }
      },
      "ErrorResponse": {
        "description": "Error response",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "message": {
                  "type": "string",
                  "example": "fail"
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/getCars": {
      "get": {
        "tags": ["Cars"],
        "responses": {
          "200": {
            "$ref": "#/components/responses/GetCarsJSONResponse"
          },
          "400": {
            "$ref": "#/components/responses/ErrorResponse"
          }
        }
      }
    }
  }
}
